<!-- app/views/admin/hotel_management.html.erb -->
<div class="container mt-4">
  <h2 class="text-center">Gestionar Hoteles</h2>

  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Ver y Administrar Todos los Hoteles</h5>
    </div>
    <div class="card-body">
      <% if @hotels.present? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Dirección</th>
              <th>Descripción</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @hotels.each do |hotel| %>
              <tr>
                <td><%= hotel.id %></td>
                <td><%= hotel.name %></td>
                <td><%= hotel.address %></td>
                <td><%= truncate(hotel.description, length: 50) %></td>
                <td>
                  <%# <%= link_to 'Ver', admin_hotel_path(hotel), class: "btn btn-info btn-sm"  %>
                  <%# <%= link_to 'Editar', edit_admin_hotel_path(hotel), class: "btn btn-warning btn-sm"  %>
                  <%# <%= link_to 'Eliminar', admin_hotel_path(hotel), method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar este hotel?' }, class: "btn btn-danger btn-sm"  %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center">No hay hoteles para mostrar.</p>
      <% end %>
    </div>
  </div>
</div>
