<!-- app/views/admin/rooms/index.html.erb -->
<div class="container mt-4">
  <h2 class="text-center">Gestionar Habitaciones</h2>

  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Ver y Administrar Todas las Habitaciones</h5>
    </div>
    <div class="card-body">
      <% if @rooms.present? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Hotel</th>
              <th>Tipo de Habitación</th>
              <th>Precio por Noche</th>
              <th>Capacidad</th>
              <th>Estado</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @rooms.each do |room| %>
              <tr>
                <td><%= room.id %></td>
                <td><%= room.hotel.name %></td>
                <td><%= room.room_type %></td>
                <td><%= number_to_currency(room.price_per_night, unit: "€") %></td>
                <td><%= room.capacity %> personas</td>
                <td><%= room.status %></td>
                <td>
                  <%= link_to 'Ver', admin_room_path(room), class: "btn btn-info btn-sm" %>
                  <%= link_to 'Editar', edit_admin_room_path(room), class: "btn btn-warning btn-sm" %>
                  <%= link_to 'Eliminar', admin_room_path(room), method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar esta habitación?' }, class: "btn btn-danger btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center">No hay habitaciones para mostrar.</p>
      <% end %>
    </div>
  </div>
</div>
